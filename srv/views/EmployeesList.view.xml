<mvc:View controllerName="be.wl.serversiderendering.controller.Main"
    xmlns="sap.f"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:sv="sap.ui.comp.smartvariants"
    height="100%">
    <DynamicPage id="dynamicPage" fitContent="true">
        <header>
            <DynamicPageHeader>
                <sfb:SmartFilterBar
                    id="smartFilterBar"
                    entitySet="Employees"
                    enableBasicSearch="true"
                    basicSearchFieldName="LastName"
                    persistencyKey="UniqueAndStablePersistencyKey">
                    <sfb:customData>
                        <core:CustomData key="defaultFilterBarExpanded"
                            value='{"LastName": "true"}' />
                        <core:CustomData key="defaultShowAllFilters" value='{"LastName": "true"}' />
                    </sfb:customData>
                </sfb:SmartFilterBar>
            </DynamicPageHeader>
        </header>
        <content>
            <smartTable:SmartTable
                id="smartTable"
                entitySet="Employees"
                smartFilterId="smartFilterBar"
                tableType="Table"
                useTablePersonalisation="true"
                header="Employees"
                showRowCount="true">
                <smartTable:layoutData>
                    <m:FlexItemData growFactor="1" baseSize="0%" />
                </smartTable:layoutData>
                <smartTable:customData>
                    <core:CustomData key="defaultShowAllFilters" value='{"Employees": "true"}' />
                    <core:CustomData key="defaultFilterBarExpanded" value='{"Employees": "true"}' />
                </smartTable:customData>
            </smartTable:SmartTable>
        </content>
    </DynamicPage>
</mvc:View>
   